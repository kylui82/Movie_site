extends layout 

block content
    //- Loop through and display errors
    if errors
        each error in errors 
            p(style="color:red") #{error.msg}

    h1 Add movie
    //- Create form for movie and post to express route
    form(method="POST", action="/movie/add")

        #form-group 
            label Name:
            input.form-control(name="name", type="text")

        #form-group 
            label Description:
            input.form-control(name="description", type="text")
    
        #form-group 
            label Year:
            input.form-control(name="year", type="number")

        #form-group 
            label Genres:
            //- Loop through genres to assign values to checkboxes
            for genre in genres
                input.form-checkbox(name="genres", type="checkbox" value=genre)
                label= genre
                
        #form-group 
            label Rating:
            input.form-control(name="rating", type="number")
        
        input.btn.btn-primary(type="submit", value="Submit")